@model Harmic.Models.TbMenu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xóa Menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xóa Menu</h3>
                        </div>
                        <!-- /.card-header -->
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail">Tiêu Đề:</label>
                                    @Html.DisplayFor(model => model.Title)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Alias:</label>
                                    @Html.DisplayFor(model => model.Alias)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Mô tả:</label>
                                    @Html.DisplayFor(model => model.Levels)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Mức:</label>
                                    @Html.DisplayFor(model => model.Levels)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Menu cha:</label>
                                    @Html.DisplayFor(model => model.Levels)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Hiện:</label>
                                    @Html.DisplayFor(model => model.IsActive)
                                </div>
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="MenuId" />
                                    <input type="submit" value="Xoa" class="btn btn-danger" />
                                    <a asp-action="Index" class="btn btn-primary">Quay lai</a>
                                </form>                             
                            </div>
                            <!-- /.card-body -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>